@{
    ViewData["Title"] = "Identifying Areas";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.10.2/Sortable.min.js"></script>

<div class="text-center text-light">
    <h2 class="display-4">Match The Columns</h2>
</div>



<div class="wrapper">
    <br /> 
<div class="grid-container">
    <div class="grid-item">
      <div class="card" style="width: 18rem;align-items: center">
           <h4 style="color: #000000; text-align: center">Column A</h4><br />
             @foreach (var area in ViewBag.Areas)
             {<div class="item"><span>@area.Key</span></div>}
        </div>
    </div>
    <div class="grid-item">
        <div class="card" style="width: 18rem;align-items: center">
            <h4 style="color: #000000; text-align: center">Column B</h4><br />
            @foreach (var area in ViewBag.Areas)
               {<div class="item"><span>@area.Value</span></div>}
        </div>
    </div>
</div>
</div>




<style>
    .wrapper .item i {
        font-size: 18px;
        cursor: pointer;
    }

    .wrapper {
        color: white;
    }

    .checkwrap {
        visibility: hidden;
    }

    .wrapper .item {
        color: #fff;
        display: flex;
        margin-bottom: 8px;
        padding: 12px 17px;
        background: #bfbfbf;
        border-radius: 3px;
        align-items: center;
        justify-content: space-between;
        width: 16rem;
    }
    .grid-container {
    display: grid;
    grid-template-columns: auto auto auto;
    padding: 10px;
    }
    .grid-item {
    padding: 20px;
    }
    
</style>



<div class="modal fade" id="ModalPopUp" role="dialog">
    <div class="modal-dialog err-pop" style="">
        <div class="modal-content">
            <div class="modal-header">
                <button id="DivClose" type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="text-align:center;">
                <h2>Congrats, youve made it through the first level!, click continue to proceed to the next level!</h2>
                <input class="btn-success" id="Button1" type="button" value="Continue" onclick="window.location.reload();"/>
                
            </div>
        </div>
    </div>
    </div>